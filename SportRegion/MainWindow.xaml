<Window x:Class="SportRegion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportRegion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Source="/Resources/логотип.jpg" HorizontalAlignment="Left"></Image>
        <TextBlock Text="SportRegion" FontSize="30" HorizontalAlignment="Center"></TextBlock>
        <Grid Background="#445c93" Panel.ZIndex="-2"></Grid>
        <Grid Grid.Row="2" Background="#bae3e8"></Grid>
        <Frame Grid.Row="1" Name="MainFrame"></Frame>
    </Grid>
</Window>
